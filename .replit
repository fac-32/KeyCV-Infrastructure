modules = ["nodejs-24"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Run"

# Main workflow that runs on "Run" button click
[[workflows.workflow]]
name = "Run"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Backend Server"

# Workflow to run the production server
[[workflows.workflow]]
name = "Backend Server"
author = "agent"

[[workflows.workflow.tasks]]
name = "Install Dependencies"
task = "shell.exec"
args = "cd backend && npm install"

[[workflows.workflow.tasks]]
name = "Build Project"
task = "shell.exec"
args = "cd backend && npm run build"
dependsOn = ["Install Dependencies"]

[[workflows.workflow.tasks]]
name = "Start Production Server"
task = "shell.exec"
args = "cd backend && npm start"
waitForPort = 3000
dependsOn = ["Build Project"]

[workflows.workflow.metadata]
outputType = "console"

# Workflow to run the development server
[[workflows.workflow]]
name = "Dev"
author = "agent"

[[workflows.workflow.tasks]]
name = "Install Dependencies"
task = "shell.exec"
args = "cd backend && npm install"

[[workflows.workflow.tasks]]
name = "Start Dev Server"
task = "shell.exec"
args = "cd backend && npm run dev"
waitForPort = 3000
dependsOn = ["Install Dependencies"]

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 3000
externalPort = 3000
